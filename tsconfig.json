{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@ui/*": [
                "packages/ui/src/*"
            ],
            "@web/*": [
                "apps/web/src/*"
            ],
            "@backend/*": [
                "apps/backend/src/*"
            ],
            "@db/*": [
                "packages/database/*"
            ]
        },
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "packages/*/src"
    ]
}